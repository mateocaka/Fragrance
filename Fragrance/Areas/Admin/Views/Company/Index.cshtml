@model List<Company>

    <div class="container">
        <div class="row pt-4 pb-3">
            <div class="col-6">
                <h2 class="text-primary">
                    Category List
                </h2>
            </div>
            <div class="col-6" text-end>
                <a asp-controller="Company" asp-action="Create" class="btn btn-primary">
                   <i class="bi bi-plus-circle"></i> Create New Category
                </a>
            </div>
        </div>
    </div>

<h1>Category List</h1>

<table class="table table-boarder table-striped">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order 
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td>
                    @obj.Id
                </td>
        <td>
                @obj.Name
        </td>
        <td>@obj.StreetAddress</td>
        <td>
                @obj.City
        </td>
        <td>@obj.State</td>
        <td>@obj.PostalCode</td>
        <td>@obj.PhoneNumber</td>
        
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Company" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Company" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-delete mx-2">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
                </td>
        
    </tr>
    }
</tbody>
</table>