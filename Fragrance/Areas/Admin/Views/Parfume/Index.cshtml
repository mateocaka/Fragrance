@model List<Parfume>

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
            </h2>
            <a asp-controller="Parfume" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Krijo parfume te ri
            </a>
        </div>

    </div>
</div>

<h1>Parfume</h1>

<table class="table table-boarder table-striped">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Emri
            </th>
            <th>
                BaseNotes
            </th>
            <th>
                MiddleNotes
            </th>
            <th>
                TopNotes
            </th>
            <th>
                Description
            </th>
            <th>
                ListPrice
            </th>
            <th>
                Price
            </th>
            <th>
                Price50
            </th>
            <th>
                Price100
            </th>
            <th>
                Gender
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(u => u.ParfumeId))
        {
            <tr>
                <td>@obj.ParfumeId</td>


                <td>
                    @obj.Name
                </td>
                <td>@obj.BaseNotes</td>
                <td>
                    @obj.MiddleNotes
                </td>
                <td>@obj.TopNotes</td>
                <td>@obj.description</td>
                <td>@obj.ListPrice</td>
                <td>@obj.Price</td>
                <td>@obj.Price50</td>
                <td>@obj.Price100</td>
                <td>@obj.Gender</td>
               
               

                <td>
                    <div class="w-75 btn-group" role="group">
               
                    <div class="w-75 btn-group" role="group">
                        <a asp-controller="Parfume" asp-action="Upsert" asp-route-id="@obj.ParfumeId" class="btn btn-primary">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Parfume" asp-action="Delete" asp-route-id="@obj.ParfumeId" class="btn btn-danger mx-2">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                    </div>
               

                </div>
                </td>
            </tr>
        }
    </tbody>
</table>